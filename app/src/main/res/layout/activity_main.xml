<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appforcollege"
    tools:context="com.example.codex_pc.myapplication.MainActivity">

    <Button
        android:id="@+id/teacherlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/studentbtn"
        android:layout_alignParentTop="true"
        android:layout_marginTop="39dp"
        android:background="@android:color/holo_blue_bright"
        android:text="Teacher " />

    <Button
        android:id="@+id/studentbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teacherlogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="@android:color/holo_blue_bright"
        android:text="student  " />

</RelativeLayout>
