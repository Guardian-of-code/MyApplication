<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.codex_pc.myapplication.addNewStudentPost">


    <EditText
        android:layout_margin="5dp"
        android:background="@drawable/bordershape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/Name"
        android:hint="Enter Name, Branch and USN"
        android:gravity="center"/>

    <EditText
        android:layout_margin="5dp"
        android:background="@drawable/bordershape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/projectTitle"
        android:hint="Enter Project Title"
        android:gravity="center"/>


    <EditText
        android:id="@+id/USN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bordershape"
        android:gravity="center"
        android:hint="Enter Project Description"
        android:padding="10dp" />

    <Button
        android:layout_margin="5dp"
        android:background="@drawable/bordershape"
        android:backgroundTint="#151c9e"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="post"
        android:textColor="#ffffff"
        android:id="@+id/Post"
        android:onClick="postButton"/>

</LinearLayout>
